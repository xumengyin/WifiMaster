<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_59"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/dp_8">

    <ImageView
        android:id="@+id/wifiIcon"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/unknow_icon" />

    <TextView
        android:id="@+id/vDeviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginLeft="10dp"
        android:textColor="@color/text_title_color1"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toRightOf="@+id/wifiIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/vDeviceIp"
        tools:text="HUAWEI" />


    <TextView
        android:id="@+id/vDeviceIp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_content_color1"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/vDeviceName"
        app:layout_constraintTop_toBottomOf="@+id/vDeviceName"
        tools:text="192.168.1.1" />
</androidx.constraintlayout.widget.ConstraintLayout>
